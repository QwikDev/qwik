{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["es2020", "DOM"],
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@qwik.dev/core",
    "declaration": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "sourceRoot": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true
  },
  "include": ["**/*.tsx", "**/*.ts"]
}
