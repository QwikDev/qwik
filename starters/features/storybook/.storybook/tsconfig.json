{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },

  "exclude": [
    "../**/*.spec.ts",
    "../**/*.test.ts",
    "../**/*.spec.tsx",
    "../**/*.test.tsx"
  ],
  "include": [
    "../src/**/*.stories.ts",
    "../src/**/*.stories.js",
    "../src/**/*.stories.jsx",
    "../src/**/*.stories.tsx",
    "../src/**/*.stories.mdx",
    "*.ts",
    "*.js",
    "preview.tsx"
  ]
}
