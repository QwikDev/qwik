{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["es2020", "DOM"],
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@builder.io/qwik",
    "declaration": true,
    "outDir": "./dist-dev/tsc-out",
    "declarationDir": "./dist-dev/dts-out",
    "isolatedModules": true,
    "strict": true,
    "importsNotUsedAsValues": "error",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@builder.io/qwik": ["packages/qwik/src/core/index"],
      "@builder.io/qwik/build": ["packages/qwik/src/build/index"],
      "@builder.io/qwik/jsx-runtime": ["packages/qwik/src/jsx-runtime/index"],
      "@builder.io/qwik/optimizer": ["packages/qwik/src/optimizer/src/index"],
      "@builder.io/qwik/server": ["packages/qwik/src/server/index"],
      "@builder.io/qwik/testing": ["packages/qwik/src/testing/index"],
      "@builder.io/qwik-city": ["packages/qwik-city/src/runtime/index"],
      "@builder.io/qwik-city/build": ["packages/qwik-city/src/runtime/build"],
      "@builder.io/qwik-city/vite": ["packages/qwik-city/src/vite"],
      "@examples-data": ["packages/docs/src/layouts/examples/examples-data.ts"],
      "@playground-data": ["packages/docs/src/layouts/playground/playground-data.ts"],
      "@qwik-client-manifest": ["packages/qwik/src/server/server-modules.d.ts"],
      "@tutorial-data": ["packages/docs/src/layouts/tutorial/tutorial-data.ts"],
      "create-qwik": ["packages/create-qwik/api/index.ts"]
    },
    "types": ["jest", "node", "vite/client", "@cloudflare/workers-types"],
    "esModuleInterop": true,
    "sourceRoot": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "packages/qwik",
    "packages/qwik-city",
    "packages/docs",
    "packages/create-cli",
    "scripts",
    "starters"
  ],
  "exclude": [
    "starters/servers",
    "starters/apps/**/entry.ssr.tsx",
    "starters/apps/**/entry.dev.tsx",
    "packages/qwik/**/*.d.ts",
    "packages/create-qwik",
    "packages/qwik-dom"
  ]
}
